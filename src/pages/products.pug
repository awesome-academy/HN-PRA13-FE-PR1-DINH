                            .col-4
                                +card__product__mixin("./assets/images/products/spx2-10.png","Cây cọ ta","250.000đ","250.000đ")
                            .col-4
                                +card__product__mixin("./assets/images/products/spx2-3.png","Cây dứa nhỏ","250.000đ","250.000đ")
                            .col-4
                                +card__product__mixin("./assets/images/products/spx2-5.png","Cây đa búp đỏ","250.000đ","250.000đ")
